{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "sensoro-design": ["components/index.ts"],
      "sensoro-design/es/*": ["components/*"],
      "sensoro-design/lib/*": ["components/*"],
      "sensoro-design/locale/*": ["components/locale/*"]
    },
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true
  },
  "include": [
    ".dumi/**/*",
    ".dumirc.ts",
    "components/**/*"
  ],
  "exclude": ["node_modules", "lib", "es"]
}
